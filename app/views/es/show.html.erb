<%= javascript_include_tag 'chartkick' %>
<%= javascript_include_tag 'chart-loader' %>
<%= javascript_include_tag 'bootstrap.min' %>

<div class="col-xs-12">
  <div class="container-fluid">
    <div class="row">
      <%= form_tag action="#{logs_page_path}", method: :get do -%>

          <div class="form-group">
            <%= label_tag :to_date, nil, class: 'control-label col-sm-2' %>
            <div class="col-xs-4">
              <%= select_tag :to_date, options_for_select(@time_values, @to_date), class: 'form-control' %>
            </div>
            <%= label_tag :from_date, nil, class: 'control-label col-sm-2' %>
            <div class="col-xs-2">
              <%= select_tag :from_date, options_for_select(@time_values, @from_date), class: 'form-control' %>
            </div>
            <%= label_tag :action, nil, class: 'control-label col-sm-2' %>
            <div class="col-xs-2">
              <%= select_tag :query, options_for_select(%w[view login logout update], @query), class: 'form-control' %>
            </div>
          </div>
          <div class="col-xs-4">
            <%= submit_tag 'submit' %>

          </div>
          </div>
      <% end -%>
      </div>
  <h2>Action <%= @query.capitalize %></h2>
  <div class="row">
    <%= line_chart "#{fabulous_page_path}?query=#{@query}&from_date=#{@from_date}&to_date=#{@to_date}" %>
  </div>
</div>
